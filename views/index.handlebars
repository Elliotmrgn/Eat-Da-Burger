<header>
  <h1 class="text-center mb-0">BURGERS!</h1>
  <img src="https://freesvg.org/img/1528816416.png" class="mx-auto d-block" alt="cute burger" />
</header>
<div class="container">
  <div class="row">
    <div class="burger-box col-6">
      <h2>Burgers that are not devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          {{name}}
          <button class="devour-btn" data-id="{{id}}" data-devoured="{{devoured}}">DEVOUR!!</button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="burger-box col-6">
      <h2>Burgers that are devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          {{name}}
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
<div class="add-burger text-center">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="newBurg">Burger Name:</label>
      <input type="text" id="newBurg" name="name">
    </div>
    <button type="submit">Add Burger</button>
  </form>
</div>